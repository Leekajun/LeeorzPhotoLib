    <declare-styleable name="CropImageView"><attr format="reference|color" name="highlightColor"/><attr format="boolean" name="showThirds"/><attr format="boolean" name="showCircle"/><attr name="showHandles">
            <enum name="changing" value="0"/>
            <enum name="always" value="1"/>
            <enum name="never" value="2"/>
        </attr></declare-styleable>
    <declare-styleable name="NumberPicker"><attr format="color" name="normalTextColor"/><attr format="dimension" name="normalTextSize"/><attr format="color" name="selecredTextColor"/><attr format="dimension" name="selecredTextSize"/><attr format="dimension" name="unitHight"/><attr format="integer" name="itemNumber"/><attr format="color|reference" name="lineColor"/><attr format="dimension" name="maskHight"/><attr format="boolean" name="noEmpty"/><attr format="boolean" name="isEnable"/></declare-styleable>
    <declare-styleable name="PagerSlidingTabStrip"><attr format="color" name="pstsIndicatorColor"/><attr format="reference" name="pstsUnderlineColor"/><attr format="color" name="pstsDividerColor"/><attr format="dimension" name="pstsIndicatorHeight"/><attr format="dimension" name="pstsUnderlineHeight"/><attr format="dimension" name="pstsDividerPadding"/><attr format="dimension" name="pstsTabPaddingLeftRight"/><attr format="dimension" name="pstsTabPaddingTopBottom"/><attr format="dimension" name="pstsScrollOffset"/><attr format="reference" name="pstsTabBackground"/><attr format="boolean" name="pstsShouldExpand"/><attr format="boolean" name="pstsTextAllCaps"/><attr format="reference" name="selectedTabTextColor"/><attr format="dimension" name="indicatorleftrightpad"/><attr format="dimension" name="iconWidth"/><attr format="dimension" name="iconHeigth"/></declare-styleable>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="crop__bar_height">56dp</dimen>
    <dimen name="title_text_size">18dp</dimen>
    <string name="all_image">所有图片</string>
    <string name="app_name">LeeorzLib</string>
    <string name="cancel">取消</string>
    <string name="confirm_to_delete">确认删除？</string>
    <string name="crop__cancel" ns1:ignore="ButtonCase">取消</string>
    <string name="crop__done">完成</string>
    <string name="crop__pick_error">无效的图片</string>
    <string name="crop__saving">正在保存照片…</string>
    <string name="crop__wait">请等待…</string>
    <string name="delete">删除</string>
    <string name="deleted_a_photo">删除了一张图片</string>
    <string name="done">完成</string>
    <string name="done_with_count">完成(%1$d/%2$d)</string>
    <string name="image_index">%1$d/%2$d</string>
    <string name="images">图片</string>
    <string name="over_max_count_tips">你最多可以选择%1$d张图片</string>
    <string name="undo">撤消</string>
    <string name="yes">确定</string>
    <style name="Crop"/>
    <style name="Crop.ActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/crop__selectable_background</item>
    </style>
    <style name="Crop.ActionButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">20dp</item> <!-- Offsets left drawable -->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/crop__button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="Crop.ActionButtonText.Cancel">
        <item name="android:text">@string/crop__cancel</item>
    </style>
    <style name="Crop.ActionButtonText.Done">
        <item name="android:text">@string/crop__done</item>
    </style>
    <style name="Crop.DoneCancelBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/crop__bar_height</item>
        <item name="android:orientation">horizontal</item>
        <!--<item name="android:divider">@drawable/crop__divider</item>-->
        <item name="android:showDividers" ns1:ignore="NewApi">middle</item>
        <item name="android:dividerPadding" ns1:ignore="NewApi">12dp</item>
        <item name="android:background">@color/crop__button_bar</item>
    </style>
    <style name="ExchangeDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="LeeorzTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/windowAnimStyle</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>
    <style name="LoadingDialogTheme" parent="Theme.AppCompat.Dialog">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">false</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:gravity">center</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="windowAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_none</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_none</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_right_out</item>
    </style>
</resources>